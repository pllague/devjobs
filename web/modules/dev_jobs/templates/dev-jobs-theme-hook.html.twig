<!-- Let's output the three variables passed to this template -->
<div class="grid lg:grid-cols-3 md:grid-cols-2 sm:grid-cols-1 gap-x-7 gap-y-12 mx-auto w-[1110px] h-auto mb-8">
  {% for job in jobs %}
    <div class="w-[350px] h-[228px] rounded-md bg-[#FFFFFF] dark:bg-d_blue">
      <div class="">
        <img class= "w-[50px] h-[50px] ml-8 -mt-[25px] rounded-lg" src="{{ job.thumbnail }}" alt="company logo">
      </div>
      <div class="ml-8 mt-8">
        <a href="http://devjobs.docker.localhost:8000/node/{{job.nid}}">
          <div class=" text-d_blue dark:text-[#FFFFFF]">{{job.title}}</div>
          <div class=" text-d_gray dark:d_gray">{{job.date}}</div>
          {% if job.job_type %}
            <div class=" text-d_gray dark:d_gray">Full Time</div>
          {% else %}
            <div class=" text-d_gray dark:d_gray">Part Time</div>
          {% endif %}
          <div class=" text-s_violet dark:text-s_violet">{{job.nid}}</div>
        </a>
      </div>
    </div>
  {% endfor %}
</div>

{# load more button #}

<div class = "flex justify-center mt-5">

  <button type = "button" class = "w-44 mt-5 mb-8 p-4 bg-s_violet text-white rounded-md hover:bg-l_violet hover:opacity-75 ">
    Load More
  </button>

</div>
